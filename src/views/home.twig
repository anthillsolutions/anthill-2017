      <div class="col-xs-12 col-sm-2">
        <h4>Company</h4>
        <ul class="list-unstyled">
          <li>
            <a href="#">Team</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>
{% endblock footer %}
